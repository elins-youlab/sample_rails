<% unless @user.valid? %>
  <div class="alert alert-danger">
    <% @user.errors.messages.each do |field, messages| %>
      <% messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>>
<% end %>
<%= form_for(@user) do |form| %>
  <div class="form-group"><label>Фамилия</label><%= form.text_field :last_name, class: "form-control" %></div>
  <div class="form-group"><label>Имя<%= form.text_field :first_name %></label></div>
  <div class="form-group"><label>Админ<%= form.check_box :admin %></label></div>
  <div class="form-group"><label>Логин<%= form.text_field :login %></label></div>
  <%= form.submit('Сохранить') %>
<% end %>